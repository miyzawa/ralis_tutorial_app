<% provide(:title, @user.name) %>
<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
  </br>
</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3"> 
  <%= form_for Tweet.new do |f| %>
    <%= f.label :たいとる%>
    <%= f.text_field :title, class: 'form-control'%>
  </br>
    <%= f.label :ないよー%>
    <%= f.text_area :content , class: 'form-control'%>
  </br></br>
    <%= f.submit :"ついーと！（`・ω・´）", class: "btn btn-primary"%>
  <% end %>
</div>
</div>
