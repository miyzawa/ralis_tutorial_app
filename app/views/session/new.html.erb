<% provide(:title, "ろぐいん！！") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :いーめーる%>
      <%= f.email_field :email, class: 'form-control' %>
      </br>
      <%= f.label :ぱすわーど%>
      <%= f.password_field :pass, class: 'form-control' %>
      </br>
      <%= f.submit "ろぐいん（´・ω・`）", class: "btn btn-primary" %>
    <% end %>

    </br>
    <p>新規登録は <%= link_to " こちら", signup_path %></p>
  </div>
</div>
